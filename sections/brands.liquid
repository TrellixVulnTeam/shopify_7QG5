{% if section.settings.display_brands_slider %}
<section class="slider-brand-wrapper" id="section-{{section.id}}">
  <div class="container">   
    <div class="row">
      <div class="col-12">
        <div class="slide_brand five-items has-slick not-arrows" data-infinite="false" data-row="{{section.settings.per_brand_row}}" data-rowtb="4" data-rowtblg="3" data-rowbm="2">
          {% for block in section.blocks %}
          <div id="brand-{{ block.id }}" class="item col-6 col-md-4 col-lg-3 col5">
            <a title="{{ block.settings.title }}" href="{{ block.settings.link }}">
              {% if block.settings.image != blank %}       
              {%- assign img_url = block.settings.image | img_url: '210x' -%}
              <img data-src="{{ block.settings.image | img_url : "200x" }}" alt="{{ block.settings.image.alt }}" {% render 'lazy_load' %}/>
              {% else %}
              <span class="not_img">210 x 75px</span>
              {% endif %}
            </a>
      		</div>
          {% endfor %}
        </div>
      </div>
    </div>
    
    {% if section.settings.brands_button_text != blank %}
      <div class="slider-brand-button">
        <a class="btn" href="{{section.settings.brands_button_link}}" title="{{section.settings.brands_button_text}}">
            {% render 'multilang' with section.settings.brands_button_text %}
        </a>
      </div>
    {% endif %}
    
  </div>
</section>
<style>
  #section-{{section.id}}{
    margin-top: {{ section.settings.space_on }}px;
    margin-bottom: {{ section.settings.space_below }}px;
  }
</style>
{% endif %}
{% schema %}
  {
    "name": "Brands Block",
    "class": "index-section",
	  "max_blocks": 10,
    "settings": [
	  {
        "type": "checkbox",
        "id": "display_brands_slider",
        "label": "Display Brands Slider?",
        "default": true
    },
	  {
      "type": "range",
      "id": "space_on",
      "label": "Space on",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0
    },
    {
      "type": "range",
      "id": "space_below",
      "label": "Space below",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 60
    },
  	{
      "type": "text",
      "id": "brands_button_text",
      "label": "Button Text",
      "default": "View All Brands"
    },
    {
        "type": "url",
        "id": "brands_button_link",
        "label": "Button Link"
    },
    {
        "type": "select",
        "id": "per_brand_row",
        "label": "Brands Per Row",
        "options": [
         {
            "value": "1",
            "label": "1"
          },
         {
            "value": "2",
            "label": "2"
          },
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "4",
            "label": "4"
          },
          {
            "value": "5",
            "label": "5"
          }
        ],
        "default": "5"
     }
	],
	"blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
			"info" : "Recommended Image: Width x Height (146 x 20)px"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Your Brands",
            "default": "Loremous"
          },
		  {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          }
		]
	  }
	],
    "presets": [
      {
        "name": "Brands Block",
        "category": "Images"
      }
    ]
  }
{% endschema %}
