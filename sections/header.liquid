</style>

<header class="site-header" role="banner">
  {% if section.settings.display_header_top and section.settings.top_message_text != blank %}
    <div class="header-top">
        <div class="container">
            <div class="top-message">
                <p>
                {% render 'multilang' with section.settings.top_message_text %}
                </p>
            </div>    
        </div>
    </div>
    {% endif %}

    <a href="#" class="icon-nav close-menu-mb" title="Menu Mobile Icon" data-menu-mb-toogle data-dropdown-menu>
        {% render 'icon-close' %}
    </a>

    <div class="header-bottom" data-sticky>
      <div class="container">
        <div class="wrapper-header">
          
          {% render 'header-mobile' %}
          
          <div class="header-pc">
            <div class="header-panel">

              <div class="left-groups wrapper-header-logo">
                <h1 class="header-logo" itemscope itemtype="http://schema.org/Organization">
                  <meta itemprop="url" content="{{ shop.url }}">
                  {% if section.settings.brand_type == 'image' and section.settings.logo_pc != bank %}
                  <a class="logo-img" href="{{ routes.cart_url | split: 'cart' | first }}" title="Logo">
                    <img data-src="{{ section.settings.logo_pc | img_url: 'master' }}"
                         src="{{ section.settings.logo_pc | img_url: 'master' }}"
                         alt="{{ section.settings.logo_pc.alt | default: shop.name }}" itemprop="logo" class="lazyautosizes lazyloaded" data-sizes="auto">
                  </a>
                  {% elsif section.settings.brand_text != '' %}
                  <a class="logo-title" href="{{ routes.cart_url | split: 'cart' | first }}" style="width: {{ section.settings.logo_max_width }}px">
                    {{ section.settings.brand_text }}
                  </a>
                  {% else %}
                  <a class="logo-title" href="{{ routes.cart_url | split: 'cart' | first }}">
                    {{ shop.name }}
                  </a>
                  {% endif %}
                </h1>
              </div>

              <div class="center-groups wrapper-navigation">
                <nav class="nav-bar{% if section.settings.alignment == 'left' %} text-left{% elsif section.settings.alignment == 'right' %} text-right{% else %} text-center{% endif %}" role="navigation">
                    {% render 'site-nav' %}
                </nav>
              </div>

              <div class="right-groups">
                <div class="account-link">
                  {% if customer %}
                      <a class="hl-item acc-logout" href="{{ routes.cart_url | split: 'cart' | first }}account/logout">
                        <span class="text-right-hl" {% if settings.enable_multilang %} data-translate="customer.account.title" {% endif %}>
                          {{ 'customer.account.log_out' | t }}
                        </span>
                      </a>
                      <span> / </span>
                      <a class="hl-item acc-title" href="{{ routes.cart_url | split: 'cart' | first }}account">
                        <span class="text-right-hl" {% if settings.enable_multilang %} data-translate="customer.account.title" {% endif %}>
                          {{ 'customer.account.title' | t }}
                        </span>
                        {% render 'icon-user' %}
                      </a>
                  {% else %}
                      <a class="hl-item" href="{{ routes.cart_url | split: 'cart' | first }}account">
                        <span class="text-right-hl" {% if settings.enable_multilang %} data-translate="customer.account.title" {% endif %}>
                          {{ 'customer.account.title' | t }}
                        </span>
                        {% render 'icon-user' %}
                      </a>
                  {% endif %}
                </div>

                 <div class="wrapper-top-cart">
                  {% render 'wrapper-top-cart' %}
                </div>

                <div class="nav-search">                  
                  {% render 'search-bar' %}
                </div>

                <div class="right-nav">
                  <a href="#" class="icon-nav svg-mb" title="Right Menu" data-menu-toogle data-dropdown-menu>
                      <span class="icon-line"></span>
                  </a>
                  <div id="right-nav-dropdown" class="dropdown-border">
                    <ul class="right-nav-links">
                      {% if customer %}
                        <li>
                          <a class="acc-links text-hover acc-logout" id="customer_logout_link" href="/account/logout" {% if settings.enable_multilang %}data-translate="layout.customer.log_out"{% endif %}>
                          {{ 'layout.customer.log_out' | t }}
                          </a>
                        </li>
                      {% else %}  
                        
                        <li><a data-dropdown-user class="acc-links text-hover acc-sign-in" id="customer_login_link" href="{{ routes.cart_url | split: 'cart' | first }}account/login" {% if settings.enable_multilang %}data-translate="customer.login.sign_in"{% endif %}>
                          {{ 'customer.login.sign_in' | t }}
                        </a></li>

                        <li>
                          <a class="acc-links text-hover acc-regis" id="customer_register_link" href="{{ routes.cart_url | split: 'cart' | first }}account/register"{% if settings.enable_multilang %} data-translate="layout.customer.create_account"{% endif %}>
                          {{ 'layout.customer.create_account' | t }}
                          </a>
                        </li>
                      {% endif %}

                      {% if settings.enable_wishlist %}
                        <li>
                          <a class="wishlist" {% if section.settings.rightnav_wishlist_link != blank %}href="{{section.settings.rightnav_wishlist_link}}"{% else %}href="{{ routes.cart_url | split: 'cart' | first }}pages/wish-list"{% endif %} title="">
                            <i class="fa fa-heart" aria-hidden="true"></i>
                            <span class="wishlist-text text-hover">
                              {% render 'multilang' with section.settings.rightnav_wishlist_title %}
                            </span>
                          </a>
                        </li>
                      {% endif %}

                      {%- assign rightnav_linklist = section.settings.rightnav_linklist -%}
                      {% if linklists[rightnav_linklist].links.size > 0 %}
                        {% for link in linklists[rightnav_linklist].links %}
                          <li>
                            <a href="{{ link.url}}" title="{{ link.title }}" class="foot-link">
                                {% render 'multilang' with link.title %}
                            </a>
                          </li>
                        {% endfor %}
                      {% endif %}                               
                    </ul>
                    <div class="lang-currency-groups">
                        {% if settings.footer_layout == 'footer_2' %}
                          {% if settings.enable_multilang_shopify %}
                            <div class="language-groups-footer2">
                              <div class="lang-block1"></div>
                            </div>
                          {% endif %}
                        {% else %}
                          {% if settings.enable_multilang_shopify %}
                            {% render 'new-language-picker' %}
                          {% endif %}
                        {% endif %}
                        {% render 'new-currency-picker' %}
                    </div>
                  </div>
                </div>
              </div>
        </div>
      </div>
  </div>
</header>
<script>
  window.fixtop_menu = {{ section.settings.display_fixtop_menu }};
</script>
