  {% assign max_height_logo_pc =  section.settings.max_height_logo_pc %}
  
  {% assign bg_header_bottom_color = section.settings.bg_header_bottom_color %}
  {% assign header_bottom_link_color = section.settings.header_bottom_link_color %}
  {% assign header_bottom_text_color = section.settings.header_bottom_text_color %}
  
  /*  Cart  */
  {% assign bg_cart_color = section.settings.bg_cart_color %}
  {% assign cart_color = section.settings.cart_color %}

  {% comment %} /*  Label - Navigation  */ {% endcomment %}
  {% assign bg_lb_sale = section.settings.bg_lb_sale %}
  {% assign color_lb_sale = section.settings.color_lb_sale %}
  {% assign bg_lb_new = section.settings.bg_lb_new %}
  {% assign color_lb_new = section.settings.color_lb_new %}
  {% assign bg_lb_hot = section.settings.bg_lb_hot %}
  {% assign color_lb_hot = section.settings.color_lb_hot %}
  
  
  .header-top {
    background-color: {{ bg_header_top }};
    color: {{ text_header_top_color }};
  }
  .header-top a {
    color: {{ text_header_top_color }};
  }
  .header-top .top-message p a:hover {
    border-bottom-color: {{ text_header_top_color }};
  }
  .header-top .close:hover {
    color: {{ text_header_top_color }};
  }
  .cart-icon .cartCount {
    background-color: {{ bg_cart_color }};
    color: {{ cart_color }};
  }
  .logo-img {
    display: block;
  }
  .logo-title{
    color: {{section.settings.logo_text_color}};
    font-size: {{section.settings.font_size_logo}};
  }
  .site-header .header-bottom {
    background-color: {{ bg_header_bottom_color }};
    color: {{ header_bottom_text_color }};
    -webkit-box-shadow: 0 3px 3px -3px rgba(0,0,0,0.12);
    -moz-box-shadow: 0 3px 3px -3px rgba(0,0,0,0.12);
    box-shadow: 0 3px 3px -3px rgba(0,0,0,0.12);
  }
  
  .header-mb .logo-img img,
  .logo-fixed .logo-img img {
    max-height: {{ max_height_logo_mb }};
  }
  .header-pc .logo-img img {
    max-height: {{ max_height_logo_pc }};
  }
  .site-header .header-mb .svg-mb a {
     color: {{ header_bottom_text_color }};
  }

  .site-nav .icon_sale {
    background-color: {{ bg_lb_sale }};
    color: {{ color_lb_sale }};
  }
    
  .site-nav .icon_new {
      background-color: {{ bg_lb_new }};
      color: {{ color_lb_new }};
  }
      
  .site-nav .icon_hot {
      background-color: {{ bg_lb_hot }};
      color: {{ color_lb_hot }};
  }

