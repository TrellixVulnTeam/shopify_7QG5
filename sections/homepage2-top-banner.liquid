</style>
{% endif %}


{% schema %}
    {
        "name": "Homepage 2 Top Banner",
        "class": "home2-top-banner-sections",
        "max_blocks": 2,
        "settings": [
            {
                "type": "checkbox",
                "id": "display_sub_banner",
                "label": "Enable",
                "default": true
            } 
        ],
        "blocks": [
            {
                "type": "image",
                "name": "Image",
                "settings": [           
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type" : "text",
                    "id" : "title",
                    "label" : "Title",
                    "default" : "Womens Watches"
                },
                {
                    "type" : "text",
                    "id" : "font_size_title",
                    "label" : "Title Font Size ",
                    "default" : "30px"
                },
                {
                    "type" : "color",
                    "id" : "color_title",
                    "label" : "Title Color",
                    "default" : "#fff"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link",
                    "info": "Optional"
                },
                {
                    "type" : "text",
                    "id" : "title_shop",
                    "label" : "Title Button",
                    "default" : "Shop now"
                },
                {
                    "type" : "text",
                    "id" : "font_size_button",
                    "label" : "Button Font Size ",
                    "default" : "14px"
                },
                {
                    "type" : "color",
                    "id" : "color_title_button",
                    "label" : "Button Title Color",
                    "default" : "#fff"
                },
                {
                    "type" : "color",
                    "id" : "background_title_button",
                    "label" : "Background Button Title Color",
                    "default" : "transparent"
                },
                {
                    "type" : "color",
                    "id" : "background_border_title_button",
                    "label" : "Background Border Button Title Color",
                    "default" : "#fff"
                }
                ]
            }
        ],
        "presets": [
            {
                "name": "Homepage 2 Top Banner",
                "category": "block images",
                "blocks": [
                    {
                        "type": "image"
                    },
                    {
                        "type": "image"
                    }
                ]
            }
        ]
    }
{% endschema %}