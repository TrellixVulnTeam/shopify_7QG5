{% if section.settings.display_sub_banner and section.blocks.size > 0 %}
<div class="home2-top-banner" id="home2-top-banner-{{section.id}}">
    <div class="container">
        <div class="row">
            {% for block in section.blocks %}
            
            {% case section.blocks.size %}
                {% when 1 %}
                {%- assign column_size = 'col-12 one-block' -%}
                {% when 2 %}
                {%- assign column_size = 'col-12 col-sm-6 two-blocks' -%}
            {% endcase %}
                
            <div class="item {{ column_size }}">
                <div class="sub-banner banner-item">
                    <div class="img-box">
                        <a href="{{ block.settings.link }}" class="animate-scale">
                            {% if block.settings.image != blank %}
                            
                            {%- assign img_url = block.settings.image | img_url: 'original', crop: 'center' -%}

                            <img data-src="{{ img_url }}"
                                src="https:{{ img_url }}" alt="{{ block.settings.image.alt | default: shop.name }}" itemprop="logo"
                                class="lazyautosizes lazyloaded" data-sizes="auto">
                            {% else %}

                            <div class="not_img">
                                770 x 800px
                            </div>   
                            {% endif %}
                        </a>
                    </div>

                    {% if block.settings.title != blank %}
                    <div class="content-box">
                        <h3 class="banner-title" style="{% if block.settings.color_title != blank %}color: {{ block.settings.color_title }};{% endif %}{% if block.settings.font_size_title != blank %}font-size: {{ block.settings.font_size_title }};{% endif %}">
                            {% render 'multilang' with block.settings.title %}                             
                            <span class="border-bt-hover" style="{% if block.settings.color_title != blank %}background-color: {{ block.settings.color_title }};{% endif %}"></span>
                        </h3>
                        <a style="{% if block.settings.color_title_button != blank %}color: {{ block.settings.color_title_button }};{% endif %}{% if block.settings.font_size_button != blank %}font-size: {{ block.settings.font_size_button }};{% endif %}{% if block.settings.background_title_button != blank %}background:{{ block.settings.background_title_button }};{% endif %}{% if block.settings.background_border_title_button != blank %}border: 1px solid {{ block.settings.background_border_title_button }};{% endif %}" href="{{ block.settings.link }}">{% render 'multilang' with block.settings.title_shop %}</a>
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

