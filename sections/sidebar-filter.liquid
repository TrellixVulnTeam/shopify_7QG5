                        {% if settings.enable_multilang and tag contains '|' %}
                        <input type="checkbox" class="lang1" value="{{ tag_value | split: '|' | first }}"/>
                        <label class="lang1">
                            {{ tag | split: '|' | first }}
                        </label>

                        <input type="checkbox" class="lang2" value="{{ tag_value | split: '|' | last }}"/>
                        <label class="lang2">
                            {{ tag | split: '|' | last }}
                        </label>

